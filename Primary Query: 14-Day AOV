-- Optimized for performance with partition filtering
SELECT
  advertisedAsin AS asin,
  SAFE_DIVIDE(SUM(sales), NULLIF(SUM(orders), 0)) AS aov,
  SUM(orders) AS orders,
  SUM(sales) AS sales,
  COUNT(DISTINCT segments_date) AS active_days
FROM `amazon-ppc-474902.amazon_ppc.sp_advertised_product_metrics`
WHERE 
  segments_date >= DATE_SUB(CURRENT_DATE(), INTERVAL 14 DAY)
  AND sales > 0  -- Performance optimization
GROUP BY asin
HAVING 
  orders >= 2  -- Statistical significance
  AND aov > 10  -- Sanity check
ORDER BY orders DESC;
